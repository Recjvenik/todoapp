{% include 'main.jinja' %}

{% block content %}

<main class="formPage my-xl">
    <div class="content-box">
        <div class="formWrapper">
            <br>
            <form class="form" method="POST">
                <!-- Input:Text -->
                {% csrf_token %}
                <p>Are you sure you want to delete "{{todo}}"</p>
                <a class="btn btn--sub btn--lg  my-md" href="{% url 'todos' %}">
                    Go Back
                </a>

                <input class="btn btn--sub btn--lg  my-md" type="submit" value="Confirm" />
            </form>
        </div>
    </div>
</main>

{% endblock %}
